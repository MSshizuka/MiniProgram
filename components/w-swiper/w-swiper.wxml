<!--components/w-swiper/w-swiper.wxml-->
<swiper class="swiper"
        autoplay
        circular
        interval="2500"
        duration="400"
        indicator-dots
        indicator-active-color="#ff5777">
  <block wx:for="{{list}}" wx:key="{{index}}">
    <swiper-item class="swiper-item">
      <image src="{{item.image}}" mode="widthFix" bindload="bannerImageLoad"/>
    </swiper-item>
  </block>
</swiper>
