/* components/w-tab-control/w-tab-control.wxss */
.tab-control {
  display: flex;
  height: 88rpx;
  line-height: 70rpx;
  text-align: center;
  padding-bottom: 10rpx;
}

.tab-control-item {
  flex: 1;
}

.active {
  color: #ff5777;
}

.active text {
  padding: 10rpx 18rpx 20rpx;
  border-bottom: 8rpx solid #ff5777;
}